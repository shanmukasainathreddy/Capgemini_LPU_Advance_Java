package com.prac;

import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.junit.jupiter.api.Assertions.assertTrue;

import org.junit.jupiter.api.Test;

public class CalculatorTest {
		public void addTest() {
			int result = Calculator.add(20, 30);
		}
		
		
		@Test
		public void reverseTest() {
			String actual_result = Calculator.reverseString("shannu");
			
			assertEquals("unnahs",actual_result);
		}
		
//		@Test
//		public void reverseTestNull() {
//			String actual_res = Calculator.reverseString(null);
//			assertEquals("llun",actual_res);
//		}
		
		@Test
		public void palindromeTest() {
			boolean actual_p = Calculator.palindrome(1);
			assertEquals(true,actual_p);
		}
		
		@Test
		public void factorialTest() {
			int actual_f = Calculator.factorial(5);
			assertEquals(120,actual_f);
		}
		
		@Test
		public void testValidAge() {
			Employee e = new Employee(101,"Dingaa",18,"CSE");
			assertTrue(e.isValidAge());
			
		}
}
